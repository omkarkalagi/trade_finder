{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "ES2020", // Add this
    "target": "ES2020", // Add this
    "moduleResolution": "node", // Add this
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ]
}
